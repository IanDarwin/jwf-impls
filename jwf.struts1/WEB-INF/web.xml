<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<!-- Ian's handy summary (courtesy of the XML parser :-) )
 The content of element type "web-app" must match "(icon?,
 display-name?, description?, distributable?, context-param*,
 filter*, filter-mapping*, listener*, servlet*, servlet-mapping*,
 session-config?, mime-mapping*, welcome-file-list?, error-page*,
 taglib*, resource-env-ref*, resource-ref*, security-constraint*,
 login-config?, security-role*, env-entry*, ejb-ref*, ejb-local-ref*)".
 -->

<web-app>
    <display-name>Ian Darwin's Java Web Frameworks Catalog</display-name>
    <description>
		This is Ian Darwin's Java Web Frameworks Catalog site, 
		a simple test web application build with servlets only, JSP only,
		servlets and JSP, Struts, Velocity, and so on.
    </description>

	<!-- SERVLET DEFINITIONS -->

	<!-- Implementations -->
	<servlet>
		<servlet-name>ServletOnly</servlet-name>
		<servlet-class>servletonly.ServletOnly</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ServletDispatcher</servlet-name>
		<servlet-class>servletdispatcher.ServletDispatcher</servlet-class>
	</servlet>
    <servlet>
        <servlet-name>HelloNiggle</servlet-name>
        <servlet-class>HelloNiggleServlet</servlet-class>
        <init-param>
            <param-name>PAGE_FACTORY_CLASS</param-name>
            <param-value>freemarker</param-value>
        </init-param>
    </servlet>

	<!-- Struts -->
	<servlet>
		<servlet-name>StrutsActionServlet</servlet-name>
		<servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/struts-config.xml</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<!-- SERVLET MAPPINGS -->

	<servlet-mapping>
		<servlet-name>ServletOnly</servlet-name>
		<url-pattern>/servletonly/Servlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletDispatcher</servlet-name>
		<url-pattern>/servletdispatcher/Servlet</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
        <servlet-name>HelloNiggle</servlet-name>
		<url-pattern>/niggle/HelloNiggleServlet</url-pattern>
    </servlet-mapping>

	<!-- Struts -->
	<servlet-mapping>
		<servlet-name>StrutsActionServlet</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<!-- TAG LIBRARIES -->
	<!-- Struts -->
	<taglib>
		<taglib-uri>/WEB-INF/struts-bean.tld</taglib-uri>
		<taglib-location>/WEB-INF/struts-bean.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/WEB-INF/struts-html.tld</taglib-uri>
		<taglib-location>/WEB-INF/struts-html.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/WEB-INF/struts-logic.tld</taglib-uri>
		<taglib-location>/WEB-INF/struts-logic.tld</taglib-location>
	</taglib>

	<!-- The JDBC datasource -->
	<resource-ref>
		<res-ref-name>jdbc/javawebframeworks</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>
