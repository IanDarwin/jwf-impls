<?xml version="1.0"?>
<!DOCTYPE RECORDDEFS SYSTEM "classpath:/org/oreodata/metadata/recorddefs.dtd">
<RECORDDEFS>
	<!--
	Actual excerpt from the HSQLDB "script" file:
	CREATE TABLE PEOPLE(ID INTEGER NOT NULL IDENTITY PRIMARY KEY,
	FIRSTNAME VARCHAR(40),LASTNAME VARCHAR(40),EMAIL VARCHAR(40),
	ADDRESS1 VARCHAR(40),ADDRESS2 VARCHAR(40),CITY VARCHAR(40),
	PROVINCE VARCHAR(40),POSTCODE VARCHAR(20),COUNTRY VARCHAR(40))
	-->
	<RECORD TYPE="people" PRIMARY_KEY="id">
		<FIELD NAME="id" CLASS="&NUMBER;">
			<!-- Don't specify required here; database will provide -->
			<PROPERTY KEY="TYPE" VALUE="INTEGER"/>
			<PROPERTY KEY="MINIMUM" VALUE="0"/>
		</FIELD>
		<FIELD NAME="firstname" CLASS="&STRING;" REQUIRED="Y">
			<NORMALIZE TYPE="TRIM"/>
			<NORMALIZE TYPE="CAPITALIZE"/>
		</FIELD>
		<FIELD NAME="lastname" CLASS="&STRING;" REQUIRED="Y">
			<NORMALIZE TYPE="TRIM"/>
			<NORMALIZE TYPE="CAPITALIZE"/>
		</FIELD>
		<FIELD NAME="email" CLASS="&EMAIL;" REQUIRED="Y"/>
		<FIELD NAME="address1" CLASS="&STRING;"/>
		<FIELD NAME="address2" CLASS="&STRING;"/>
		<FIELD NAME="city" CLASS="&STRING;"/>
		<FIELD NAME="province" CLASS="&STRING;"/>
		<FIELD NAME="postcode" CLASS="&STRING;"/>
		<FIELD NAME="country" CLASS="&STRING;"/>
	</RECORD>
</RECORDDEFS>
